{
    "include": ["./src/**/*","./server.ts"],
    "exclude": ["./dist"],
    "compilerOptions": {
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "ES6",
        "module": "ES6",
        "allowJs": true,
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports" : true,
        "typeRoots": [
            "./src/@types", 
            "./node_modules/@types"
        ],
        "lib": [
            "es2017",
            "DOM"
        ]
    }
}